<style>
  .selected-seats {
   
    padding: 15px;
    
    border-radius: 6px;
    margin-bottom: 20px;
  }
  .selected-seats h3 {
    color: #333;
    margin-bottom: 10px;
  }
  .selected-seats ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .selected-seats li {
    
    padding: 8px 12px;
    margin-bottom: 6px;
    border-radius: 4px;
    font-size: 1.1rem;
  }
  #total-cost {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 20px;
    padding:8px 12px;
    
    border-radius : 4px;
    color:#6A0DAD;
    text-align: center;
  }

  body.active #total-cost {
   color:#b266ff;
  }

  body.active .selected-seats h3 {
    color: white;
  }
</style>
<body>
  <div class="payment-container" style="max-width: 600px; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);">
    <h1>Payment Page</h1>
    
    <div class="selected-seats">
      <h3>Selected Seats:</h3>
      <ul>
        {{#each seats}}
          <li>Row: {{this.row}}, Seat: {{this.seat}}</li>
        {{/each}}
      </ul>
    </div>
    
    <!-- Hidden inputs -->
    <form action="/payment-submit" method="post">
      <input type="hidden" name="eventId" value="{{eventId}}">
      <input type="hidden" name="seats" value="{{seatsParam}}">
      
      <!-- Hidden div to pass the eventPrice mapping to the client side -->
      <div id="price-legend" data-prices='{{json eventPrice}}' style="display:none;"></div>
      
      <!-- Total cost will be injected above the form -->
      <div id="total-cost"></div>
      
      <div style="margin: 10px 0;">
        <label for="cardNumber">Card Number:</label>
        <input type="text" name="cardNumber" id="cardNumber" style="width: 100%; padding: 8px;">
      </div>
      <div style="margin: 10px 0;">
        <label for="expiry">Expiry Date:</label>
        <input type="text" name="expiry" id="expiry" placeholder="MM/YY" style="width: 100%; padding: 8px;">
      </div>
      <div style="margin: 10px 0;">
        <label for="cvv">CVV:</label>
        <input type="text" name="cvv" id="cvv" style="width: 100%; padding: 8px;">
      </div>
      <button type="submit" style="padding: 10px 20px; background-color: #7FB3D5; color: #fff; border: none; border-radius: 5px; cursor: pointer;">Pay Now</button>
    </form>
  </div>
  
  <!-- Payment Total Cost Calculation Script -->
  


   <script src="/src/paymentTotal.js"></script>
  <script src="/src/paymentValidation.js"></script>
</body>
